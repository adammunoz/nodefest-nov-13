{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "no-unused-vars": 1,
    "no-param-reassign": [2, {"props": false}],
    "new-cap": [2, { "capIsNewExceptions": ["List", "Map", "DragDropContext", "DropTarget", "DragSource"] }],
    "quotes": [2, "single"],
    "comma-dangle": [2, "only-multiline"],
    "max-len": [2, 150, 2],
    "prefere-stateless-functions": 0,
    "object-shorthand": 0,
    "eol-last": 0,
    "import/no-unresolved": 0,
    "padded-blocks": 0,
    "react/jsx-indent": 0,
    "no-console": 0,
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,
    "no-duplicate-imports": 0,
    "no-shadow": 1,
    "react/prefer-stateless-function": 1,
    "react/prop-types": 0,
    "react/jsx-boolean-value": 0
  },
  "globals": {
    "_": true,
    "ENVIRONMENT": true
  },
  "plugins": ["flow-vars"]
}